extends layout

block content
  h1= title

    
  .row
    .col
      .alert.alert-danger=message
      form(action="/", method="post")
        .form-group
          label(for='username') Username
          input#username.form-control.is-valid(type='text' name='username')
        .form-group
          label(for='password') Password
          input#password.form-control.is-valid(type='password' name='password')

        .form-group
          label(for='password2') Confirm Password
          input#password2.form-control.is-valid(type='password' name='confirm') 
        .text-center    
          button.btn.btn-primary.text-center.is-valid(type = "submit") Login
    .col.bgimgLogin

  

  
  
